<html>
<head>
    <title>Create New User</title>
    <meta name="decorator" content="atl.general">
    <meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
    $webResourceManager.requireResource("at.fellhofer.jira.AdminHelper:create-resources")
</head>
<body class="aui-layout aui-theme-default">
<div id="aui-message-bar"></div>
<header class="aui-page-header">
    <div class="aui-page-header-inner">
        <h2>Create New User</h2>
    </div>
</header>
<div class="aui-page-panel">
    <div class="aui-page-panel-inner">
        <section class="aui-page-panel-content">
            <form id="create" class="aui">
                <h3>Personal Information</h3>
                <fieldset>
                    <div class="field-group">
                        <label for="firstname">First Name<span class="aui-icon icon-required"> required</span></label>
                        <input class="text" type="text" id="firstname" name="firstname" title="first name">
                    </div>
                    <div class="field-group">
                        <label for="lastname">Last Name<span class="aui-icon icon-required"> required</span></label>
                        <input class="text" type="text" id="lastname" name="lastname" title="last name">
                    </div>
                    <div class="field-group">
                        <label for="username">Username<span class="aui-icon icon-required"> required</span></label>
                        <input class="text" type="text" id="username" name="username" title="username">

                        <div class="description">Suggested username regarding to the user's full name.</div>
                    </div>
                    <div class="field-group">
                        <label for="email">Email<span class="aui-icon icon-required"> required</span></label>
                        <input class="text" type="text" id="email" name="email" title="email"
                               placeholder="you@example.com">
                    </div>
                    <div class="field-group">
                        <label for="github">GitHub username</label>
                        <input class="text" type="text" id="github" name="github" title="github name">
                        <div class="error" id="github-error">No such GitHub username found!</div>
                    </div>
                </fieldset>

                <h3>Teams</h3>

                <table class="aui">
                    <thead>
                    <tr>
                        <th id="basic-team">Team</th>
                        <th id="basic-coordinator">Coordinator</th>
                        <th id="basic-senior">Senior</th>
                        <th id="basic-developer">Developer</th>
                        <th id="basic-none">None</th>
                    </tr>
                    </thead>
                    <tbody id="team-body">

                    </tbody>
                </table>

                #*
                <h3>Resources</h3>
                <fieldset class="group">
                    <legend><span>Allow access to</span></legend>
                    <div class="checkbox">
                        <input class="checkbox" type="checkbox" name="cbOne" id="cbOne">
                        <label for="cbOne">Jira</label>
                    </div>
                    <div class="checkbox">
                        <input class="checkbox" type="checkbox" name="cbTwo" id="cbTwo">
                        <label for="cbTwo">Confluence</label>
                    </div>
                    <div class="checkbox">
                        <input class="checkbox" type="checkbox" name="cbThree" id="cbThree">
                        <label for="cbThree">Jenkins</label>
                    </div>
                    <div class="checkbox">
                        <input class="checkbox" type="checkbox" name="cbThree" id="cbFour">
                        <label for="cbThree">IRC Bouncer</label>
                    </div>
                </fieldset>

                <h3>All Groups</h3>
                <fieldset>
                    <legend><span>Dropdowns and multi select</span></legend>
                    <div class="field-group">
                        <label for="multiselect">Modify group membership</label>
                        <select class="multi-select" size="4" multiple="multiple" id="multiselect" name="multiselect">
                            <option>Catroid</option>
                            <option>Catroid-Coordinators</option>
                            <option>Catroid-Seniors</option>
                            <option>Catroweb</option>
                            <option>Catroweb-Coordinators</option>
                            <option>Catroweb-Seniors</option>
                            <option>Paintroid</option>
                            <option>Paintroid-Coordinators</option>
                            <option>Paintroid-Seniors</option>
                        </select>

                        <div class="description">Use only if you know what you're doing.</div>
                    </div>
                </fieldset>
                *#

                <div class="buttons-container">
                    <div class="buttons">
                        <input class="button submit" type="submit" value="Save" id="d-save-btn1">
                        <a class="cancel" href="#">Cancel</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
</body>
</html>
